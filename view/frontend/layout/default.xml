<?xml version="1.0" encoding="UTF-8"?>
<!--
/**
 *  PayPal Subscriptions
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <!-- Add Link to account area -->
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="customer-account-navigation-subscriptions">
                <arguments>
                    <argument name="path" xsi:type="string">subscriptions/customer/index</argument>
                    <argument name="label" xsi:type="string" translate="true">Your Subscriptions</argument>
                    <argument name="sortOrder" xsi:type="number">100</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>